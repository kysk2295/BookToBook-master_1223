<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:elevation="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_alert_textView_borrowed"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:text="빌림"/>

        <ImageButton
            android:id="@+id/item_alert_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@color/primaryColor"
            android:scaleType="fitXY"
            android:elevation="20dp"
            android:layout_gravity="right"
            android:src="@drawable/check"
            android:text="빌리기"/>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_alert_textView_title_haver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="[나미야 잡화점의 기적]을 [곽건]에게서"/>

                <TextView
                    android:id="@+id/item_alert_textView_when_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="2019/9/12  2-6반에서"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>