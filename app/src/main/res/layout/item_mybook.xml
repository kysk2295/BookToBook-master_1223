<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:elevation="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_mybook_textView_title"
            android:layout_margin="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/primaryColor"
            android:text="나미야 잡화점의 기적"/>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_mybook_imageView_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/example_book_img"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_mybook_textView_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="저자 : 대니얼 키스"/>

                <TextView
                    android:id="@+id/item_mybook_textView_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="출판사 : 이룸출판사"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/item_mybook_button_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/primaryColor"
                    android:textColor="@color/black"
                    android:elevation="20dp"
                    android:layout_gravity="center"
                    android:text="재등록"/>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>